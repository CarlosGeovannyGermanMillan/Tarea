<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#4caf50"
                android:padding="10dp">

                <TextView
                    android:id="@+id/itemCarrito_txt_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="bottom"
                    android:text="20 mesas plegables 65ss"
                    android:textColor="#ffe3e3e3"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/itemCarrito_imgv_minus"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:src="@drawable/ic_minus"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/itemCarrito_txt_cantidad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="65"
                    android:textSize="75sp"
                    android:textAlignment="center"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/itemCarrito_imgv_plus"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="5"
                    android:src="@drawable/ic_plus"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#4caf50"
            android:padding="10dp">

            <TextView
                android:id="@+id/itemCarrito_txt_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="bottom"
                android:text="$20203"
                android:textColor="#ffe3e3e3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemCarrito_txt_importe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:text="$1234.56"
                android:textColor="#ffe3e3e3"
                android:textSize="28sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
